<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bj_circle_fff_20"
    android:paddingTop="8dp">

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="25dp"
        android:padding="10dp"
        android:background="@drawable/shap_f5f5f5_15"
        android:layout_gravity="center_horizontal"
        android:src="@mipmap/icon_app_logo" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/color_333333"
        android:textSize="16sp"
        android:layout_marginVertical="15dp"
        android:text="微信客服二维码\n长按图片可转发至微信进行添加"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/color_666666"
        android:textSize="14sp"
        android:text="(工作时间: 9:00~18:00)"/>

    <View
        android:layout_width="wrap_content"
        android:layout_height="0.8dp"
        android:layout_marginTop="20dp"
        android:background="@color/line_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/color_333333"
            android:text="全国售后服务电话"
            android:textSize="16sp" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="60dp"
            android:background="@color/line_color" />

        <TextView
            android:id="@+id/tv_log"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="400-8823-977"
            android:textColor="@color/red40"
            android:textSize="15dp" />
    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="0.8dp"
        android:layout_marginBottom="20dp"
        android:background="@color/line_color" />
</LinearLayout>