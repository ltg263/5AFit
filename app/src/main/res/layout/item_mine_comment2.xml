<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.jxkj.fit_5a.conpoment.view.RoundImageView
        android:id="@+id/iv_head_11"
        android:layout_width="@dimen/dimen_25dp"
        android:layout_height="@dimen/dimen_25dp"
        android:layout_marginEnd="5dp"
        android:src="@mipmap/ic_6"
        app:type="circle" />

    <ImageView
        android:id="@+id/iv_liuyan2"
        android:layout_width="35dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/ll_xh"
        android:layout_alignBottom="@id/ll_xh"
        android:layout_toStartOf="@id/ll_xh"
        android:adjustViewBounds="true"
        android:paddingHorizontal="@dimen/dp_10"
        android:scaleType="fitCenter"
        android:src="@drawable/icon_liu_y"
        android:text="6"
        android:textColor="@color/color_333333"
        android:textSize="12sp" />

    <LinearLayout
        android:id="@+id/ll_xh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/dp_10">

        <ImageView
            android:id="@+id/iv_xh"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_celect_xh_yes"
            android:text="6"
            android:textColor="@color/color_333333"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_xh_s"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_xh"
            android:layout_marginStart="5dp"
            android:text="6"
            android:textColor="@color/color_666666"
            android:textSize="11sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_name_11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_5dp"
        android:layout_toEndOf="@id/iv_head_11"
        android:text="吴帅帅"
        android:textColor="#AAAAAA"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_pl_content_11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_name_11"
        android:layout_marginTop="@dimen/dimen_5dp"
        android:layout_toEndOf="@id/iv_head_11"
        android:text="工作内容工作内容工作内容工作内容"
        android:textColor="@color/color_333333"
        android:textSize="14sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:layout_below="@id/tv_pl_content_11"
        android:layout_marginVertical="5dp"
        android:visibility="invisible"
        android:layout_toEndOf="@id/iv_head_11"
        android:background="@color/line_color" />
</RelativeLayout>