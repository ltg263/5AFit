<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/color_ffffff"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_icon_cnxh"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="10dp"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_9" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:singleLine="true"
        android:layout_below="@id/iv_icon_cnxh"
        android:text="XXXX运动手环积分专..."
        android:textColor="@color/color_333333"
        android:padding="10dp"
        android:layout_marginStart="15dp"
        android:textSize="14sp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="10dp"
        android:scaleType="fitXY"
        android:src="@drawable/bj_circle_fff_tm_10" />

    <ImageView
        android:id="@+id/start"
        android:layout_width="@dimen/jz_start_button_w_h_normal"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="72dp"
        android:layout_height="@dimen/jz_start_button_w_h_normal"
        android:src="@drawable/jzvd_std_item_bof" />

</RelativeLayout>
