<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="220dp"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv"
        android:layout_width="wrap_content"
        android:layout_height="220dp"
        android:adjustViewBounds="true"
        android:src="@drawable/ic_dialog_unification" />

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:visibility="invisible"
        android:layout_alignEnd="@id/iv"
        android:src="@drawable/ic_dialog_unif_close" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:paddingVertical="15dp"
        android:layout_alignStart="@id/iv"
        android:layout_alignEnd="@id/iv"
        android:text="注销账号"
        android:textStyle="bold"
        android:textColor="#AF5C0B"
        android:textSize="18sp" />

    <LinearLayout
        android:id="@+id/ll_pas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_title"
        android:layout_alignStart="@id/iv"
        android:layout_centerInParent="true"
        android:layout_alignEnd="@id/iv"
        android:layout_marginHorizontal="30dp"
        android:background="@drawable/bj_circle_fff4d4_10"
        android:layout_marginTop="13dp"
        android:gravity="center"
        android:orientation="vertical">

        <EditText
            android:id="@+id/et_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textCursorDrawable="@drawable/shape_edit_cursor"
            android:paddingVertical="@dimen/dp_10"
            android:padding="14dp"
            android:gravity="center"
            android:textColorHint="@color/color_999999"
            android:hint="请输入注销账户的密码"
            android:lineSpacingExtra="2dp"
            android:background="@null"
            android:textColor="#AF5C0B"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv"
        android:layout_alignStart="@id/iv"
        android:layout_alignEnd="@id/iv"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/bnt_text_1"
            android:layout_width="110dp"
            android:layout_height="60dp"
            android:background="@drawable/ic_dialog_unif_bnt"
            android:gravity="center"
            android:text="取消"
            android:letterSpacing="0.1"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/bnt_text_2"
            android:layout_width="110dp"
            android:layout_height="60dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/ic_dialog_unif_bnt"
            android:gravity="center"
            android:text="确定"
            android:letterSpacing="0.1"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="14sp" />
    </LinearLayout>

</RelativeLayout>