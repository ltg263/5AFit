<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bj_circle_fff_20_ss"
        android:paddingVertical="10dp">

        <TextView
            android:id="@+id/tv_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:text="积分区间"
            android:textColor="@color/color_333333"
            android:textSize="14sp" />

        <LinearLayout
            android:id="@+id/ll_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_1"
            android:layout_margin="10dp"
            android:orientation="horizontal"
            android:padding="10dp">

            <EditText
                android:id="@+id/et_jf_d"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bj_circle_efefef_25"
                android:gravity="center"
                android:hint="自定最低积分"
                android:padding="10dp"
                android:inputType="number"
                android:textColor="@color/color_333333"
                android:textColorHint="@color/color_999999"
                android:textSize="12sp" />

            <View
                android:layout_width="50dp"
                android:layout_height="5dp"
                android:layout_gravity="center"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/bj_circle_theme_10" />

            <EditText
                android:id="@+id/et_jf_g"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bj_circle_efefef_25"
                android:gravity="center"
                android:hint="自定最高积分"
                android:padding="10dp"
                android:inputType="number"
                android:textColor="@color/color_333333"
                android:textColorHint="@color/color_999999"
                android:textSize="12sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_1"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:text="价格区间（元）"
            android:textColor="@color/color_333333"
            android:textSize="14sp" />

        <LinearLayout
            android:id="@+id/ll_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_2"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:layout_marginHorizontal="10dp"
            android:orientation="horizontal"
            android:padding="10dp">

            <EditText
                android:id="@+id/et_jg_d"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bj_circle_efefef_25"
                android:gravity="center"
                android:hint="自定最低价格"
                android:padding="10dp"
                android:inputType="number"
                android:textColor="@color/color_333333"
                android:textColorHint="@color/color_999999"
                android:textSize="12sp" />

            <View
                android:layout_width="50dp"
                android:layout_height="5dp"
                android:layout_gravity="center"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/bj_circle_theme_10" />

            <EditText
                android:id="@+id/et_jg_g"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bj_circle_efefef_25"
                android:gravity="center"
                android:hint="自定最高价格"
                android:padding="10dp"
                android:inputType="number"
                android:textColor="@color/color_333333"
                android:textColorHint="@color/color_999999"
                android:textSize="12sp" />
        </LinearLayout>
        <View
            android:id="@+id/view"
            android:layout_above="@id/ll_3"
            android:layout_width="match_parent"
            android:background="@drawable/shape_yy_f7_ss"
            android:layout_height="10dp"/>

        <LinearLayout
            android:id="@+id/ll_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_2"
            android:paddingVertical="10dp"
            android:layout_marginHorizontal="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_chongzhi"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:background="@drawable/jb_shape_34af9f_zx"
                android:text="重置"/>

            <TextView
                android:id="@+id/tv_queding"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:background="@drawable/jb_shape_4656a4_yx"
                android:text="确认"/>


        </LinearLayout>
    </RelativeLayout>


</RelativeLayout>