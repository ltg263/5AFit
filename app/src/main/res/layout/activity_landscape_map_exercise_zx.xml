<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_actionbar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical">

<!--    <com.jxkj.fit_5a.conpoment.view.MyVideoPlayer-->
<!--        android:id="@+id/mp_video"-->tv_1
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="match_parent" />-->

    <com.jxkj.fit_5a.conpoment.view.JzvdStdTikTok
        android:id="@+id/mp_video"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.jxkj.fit_5a.conpoment.view.RobotView_Zx
        android:id="@+id/iv_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/tv_new_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dimen_30dp"
        android:background="@drawable/bj_circle_ccc_6"
        android:drawableStart="@mipmap/ic_hp_yd_14"
        android:visibility="invisible"
        android:drawablePadding="13dp"
        android:gravity="center_vertical"
        android:paddingHorizontal="@dimen/dimen_20dp"
        android:paddingVertical="@dimen/dimen_5dp"
        android:text="00"
        android:textColor="@color/color_ffffff" />


    <RelativeLayout
        android:id="@+id/rl_tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_shang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/btn_shape_bj_theme_25"
            android:paddingHorizontal="@dimen/dp_10"
            android:src="@drawable/icon_jiantou_shang"
            android:textColor="@color/color_333333"
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_shang"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/bj_circle_fff_50"
            android:paddingHorizontal="@dimen/dimen_24dp"
            android:paddingVertical="@dimen/dp_10"
            android:text="00:00"
            android:textColor="@color/color_333333"
            android:textSize="17sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:background="@drawable/bj_circle_fff_4_tm">

        <com.jxkj.fit_5a.conpoment.view.RobotViewSmall
            android:id="@+id/iv_img_"
            android:layout_width="90dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="5dp"
            android:layout_height="60dp" />
        <TextView
            android:id="@+id/tv_quan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:layout_marginStart="10dp"
            android:layout_below="@id/iv_img_"
            android:gravity="center"
            android:text="第1圈"
            android:textColor="@color/color_000000"
            android:textSize="10sp" />
        <TextView
            android:id="@+id/tv_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:drawablePadding="2dp"
            android:layout_alignEnd="@id/iv_img_"
            android:layout_alignBottom="@id/tv_quan"
            android:drawableStart="@drawable/ic_youtuan"
            android:text="0km"
            android:textColor="@color/color_000000"
            android:textSize="10sp" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dimen_30dp"
        android:background="@drawable/bj_circle_ccc_6"
        android:drawableStart="@mipmap/ic_hp_yd_14"
        android:drawablePadding="13dp"
        android:gravity="center_vertical"
        android:paddingHorizontal="@dimen/dimen_20dp"
        android:paddingVertical="@dimen/dimen_5dp"
        android:text="返回VGu起哦v哥Wiu曲棍球诶怕高V九曲湾"
        android:textColor="@color/color_ffffff"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/rl"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/bj_circle_fff_6_zx">
        <ImageView
            android:id="@+id/iv_1"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:rotation="-90"
            android:scaleType="center"
            android:src="@mipmap/ic_hp_yd_121" />

        <ImageView
            android:id="@+id/iv_3"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:scaleType="center"
            android:src="@mipmap/ic_map_shipin" />
        <ImageView
            android:id="@+id/iv_2"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:scaleType="center"
            android:src="@mipmap/ic_map_zoom_in" />
        <ImageView
            android:id="@+id/iv_4"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:scaleType="center"
            android:src="@mipmap/ic_hp_yd_10" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_user_lw"
        android:layout_width="120dp"
        android:layout_marginTop="120dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="80dp"
        android:background="@drawable/bj_circle_fff_10_yx" />

    <LinearLayout
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="@dimen/dimen_100dp"
        android:background="@drawable/bj_circle_fff_10_yx"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">
<!--            排名/里程-->
            <TextView
                android:id="@+id/tv_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginStart="@dimen/dp_10"
                android:paddingVertical="@dimen/dp_10"
                android:text="排名"
                android:textColor="@color/color_000000"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/tv_pmc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="5dp"
                android:text="1"
                android:textColor="@color/color_000000"
                android:textSize="26sp" />

            <TextView
                android:id="@+id/tv_pmc_dw"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                android:paddingVertical="@dimen/dp_10"
                android:text="rd"
                android:textColor="@color/color_000000"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/iv_11"
                android:layout_width="35dp"
                android:layout_height="45dp"
                android:scaleType="center"
                android:src="@mipmap/ic_hp_yd_12" />

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_user_head"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:paddingVertical="5dp"
            android:paddingHorizontal="10dp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_go_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:adjustViewBounds="true"
        android:src="@drawable/ic_yundong_go"
        android:visibility="gone" />
</RelativeLayout>

